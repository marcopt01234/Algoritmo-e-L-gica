Exercício  1037

programa {
  funcao inicio() {
    real valor
    escreva("Digite um valor")
    leia(valor)
    se(valor >= 0.0 e valor <= 27.0) {
      escreva("Intervalo [0,27]\n")
    } senao se(valor > 27.0 e valor <= 52.0) {
      escreva("Intervalo (27,52]\n")
    } senao se(valor > 52.0 e valor <= 77.0) {
      escreva("Intervalo (52,77]\n")
    } senao se(valor > 77.0 e valor <= 100.0) {
      escreva("Intervalo (77,100]\n")
    } senao {
      escreva("Fora de intervalo\n")
    }
  }
}

Exercício  1038

programa {
inclua biblioteca Matematica

  funcao inicio() {
    inteiro codigo, quantidade
    real precos[] = {4.00, 4.50, 5.00, 2.00, 1.50}
    real total

    escreva("Digite o código do item: ")
    leia(codigo)
    codigo = codigo - 1 // ajusta o índice do vetor
    escreva("Digite a quantidade: ")
    leia(quantidade)

    se (codigo >= 0 e codigo < 5) {
      total = quantidade * precos[codigo]
      escreva("Total: R$ ", Matematica.arredondar(total, 2), "\n")
    } senao {
      escreva("Código inválido\n")
    }
  }
}

Exercício  1073

programa {
  funcao inicio() {
    inteiro N, num

    escreva("Digite um valor: ")
    leia(N)

    num = 2
    enquanto (num <= N) {
      escreva(num, "^2 = ", num * num, "\n")
      num = num + 2
    }
  }
}

Exercício  1114

programa {
  funcao inicio() {
    inteiro senha
    inteiro senha_correta = 2002

    enquanto (verdadeiro) {
      leia(senha)
      se (senha == senha_correta) {
        escreva("Acesso Permitido\n")
        pare
      } senao {
        escreva("Senha Invalida\n")
      }
    }
  }
}

Exercício  1134

programa {
  funcao inicio() {
    inteiro codigo
    inteiro alcool = 0, gasolina = 0, diesel = 0

    enquanto (verdadeiro) {
      leia(codigo)
      se (codigo == 4) {
        pare
      } senao se (codigo >= 1 e codigo <= 3) {
        escolha (codigo) {
          caso 1:
            alcool = alcool + 1
            pare
          caso 2:
            gasolina = gasolina + 1
            pare
          caso 3:
            diesel = diesel + 1
            pare
        }
      } senao {
        // ignora código inválido e solicita novamente
      }
    }

    escreva("MUITO OBRIGADO\n")
    escreva("Alcool: ", alcool, "\n")
    escreva("Gasolina: ", gasolina, "\n")
    escreva("Diesel: ", diesel, "\n")
  }
}

Python

Exercício  1007
from time import sleep

A = int(input('Digite um número: '))

B = int(input('Digite outro número: '))

C = int(input('Digite mais um número: '))

D = int(input('Digite mais um número: '))


#Multiplicação entre A e B


N1 = A * B

print('A multiplicação entre A e B é \033[4;32m {} \033[m'.format(N1), end=' e ')


#Multiplicação entre C e D


N2 = C * D

print('a multiplicação entre C e D é \033[4;36m {} \033[m'.format(N2), end=' e ')


#Diferença entre os valores AB e CD


R = N1 - N2

print('a diferença entre AB e CD é \033[4;37m {} \033[m'.format(R))


sleep(3)



Exercício  1008

numero_funcionario = int(input("Digite o número do funcionário: "))

horas_trabalhadas = int(input("Digite o número de horas trabalhadas: "))

valor_por_hora = float(input("Digite o valor por hora: "))


salario = horas_trabalhadas * valor_por_hora


print('NUMBER = {}'.format(numero_funcionario))

print('SALARY = U$ {:.2f}'.format(salario))



