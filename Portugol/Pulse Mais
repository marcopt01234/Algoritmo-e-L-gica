Exercício  1134

from time import sleep

alcool = 0

gasolina = 0

diesel = 0


while True:

    try:

        codigo = int(input('Informe o tipo de combustível abastecido: '))

        if codigo == 4:

            break

        elif codigo == 1:

            alcool += 1

        elif codigo == 2:

            gasolina += 1

        elif codigo == 3:

            diesel += 1

        else:

            print('Código inválido. Por favor, insira um código válido.')

    except ValueError:

        print('Entrada inválida. Por favor, insira um valor inteiro.')


print("MUITO OBRIGADO")

print("Alcool: {}".format(alcool))

print("Gasolina: {}".format(gasolina))

print("Diesel: {}".format(diesel))


sleep(3)



Exercício  1073

from time import sleep

N = int(input('Escolher um número: '))


for num in range(1, N + 1):

    if num % 2 == 0:

        print('{} ^ 2 = {}'.format(num, num ** 2))


sleep(2)



Exercício  1002

from time import sleep


# Define o valor de PI

PI = 3.14159


# Lê o valor do raio como um número real

raio = float(input('Informe o raio da circunferência:'))


# Calcula a área da circunferência

area = PI * (raio ** 2)


# Imprime o resultado com 4 casas decimais

print('A={:.4f}'.format(area))


sleep(3)



Exercício  1114

from time import sleep

senha_correta = 2002


while True:

    try:

        senha = int(input('Qual é a senha? '))

        if senha == senha_correta:

            print("Acesso Permitido")

            break

        else:

            print("Senha Invalida")

    except ValueError:

        print("Entrada inválida. Por favor, insira um valor inteiro.")

sleep(2)



Exercício 1038

from time import sleep

print('\U0001F37D' * 20)

print('Bem vindo ao lanchonete do Marco')

print('\U0001F37D' * 20)

sleep(2)


print('Irei te apresentar o cardápio \U0001F4CB')

sleep(2)

print('[1] - Cachorro-Quente \U0001F32D')

print('[2] - X-Salada \U0001F354')

print('[3] - X-Bacon \U0001F354')

print('[4] - Torrada Simples \U0001F35E')

print('[5] - Refrigerante \U0001F964')

sleep(2)


print('Qual você escolhe?')

opcao = str(input(' '))

sleep(2)

print('Quantos que você quer?')

quantidade = int(input(' '))


if opcao == '1':

    sleep(2)

    valor = quantidade * 4

    print('\U0001F4B8 O valor ficará R${:.2f} \U0001F4B8'.format(valor))

elif opcao == '2':

     sleep(2)

     valor = quantidade * 4.50

     print('\U0001F4B8 O valor ficará R${:.2f} \U0001F4B8'.format(valor))

elif opcao == '3':

     sleep(2)

     valor = quantidade * 5

     print('\U0001F4B8 O valor ficará R${:.2f} \U0001F4B8'.format(valor))

elif opcao == '4':

    sleep(2)

    valor = quantidade * 2

    print('\U0001F4B8 O valor ficará R${:.2f} \U0001F4B8'.format(valor))

elif opcao == '5':

    sleep(2)

    valor = quantidade * 1.50

    print('\U0001F4B8 O valor ficará R${:.2f} \U0001F4B8'.format(valor))

else:

    print('\033[1;31m Essa opção não existe! \033[m')


print('Tenha um ótimo dia', end= '')

print('\U0001F601' * 3)


Exercício 1017

from time import sleep

print('\U0001F6E3' * 20)

print('Vamos ver quantos Km você percorreu', end=' e ')

print('o quantos litros de combustível você consumiu')

print('\U0001F697' * 20)


# Primeiro vamos descobrir a sua velocidade e o tempo que demorou


tem = int(input('Digite o tempo que durou na sua viagem (h) \U0000231B'))

vel = float(input('Digite a velocidade que você percorreu (km/h) \U0001F3CE'))


# Agora vamos descobrir quanto foi a sua distância


dis = tem * vel

print('A sua distância foi de \033[4;35m {} \033[m km'.format(dis))


#Agora vamos descobrir quantos litros de combústivel consumiu


con = dis / 12

print('Você consumiu \033[4;32m {:.2f} \033[m litros de combústivel'.format(con))

sleep(2)


Exercício  1037

from time import sleep

num = float(input('Digite um número '))


if 0.0 < num < 27.0:

    print('Intervalo entre 0 até 27')

elif 27.0 < num < 52.0:

    print('Intervalo entre 27 até 52')

elif 52.0 < num < 77.0:

    print('Intervalo entre 52 até 77')

elif 77.0 < num < 100.0:

    print('Intervalo entre 0 até 27')

elif num < 0.0:

    print('Fora de intervalo')

else:

    print('Fora de intervalo')

sleep(2)



Exercício  1009

from time import sleep

nome_vendedor = input('Digite o nome do vendedor: ')

salario_fixo = float(input('Digite o salário fixo do vendedor: R$ '))

total_vendas = float(input('Digite o total de vendas efetuadas pelo vendedor: R$ '))


comissao = total_vendas * 0.15

salario_total = salario_fixo + comissao


print('TOTAL = R$ {:.2f}'.format(salario_total))


sleep(2)


